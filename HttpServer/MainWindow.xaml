<Window x:Class="HttpServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HttpServer"
        mc:Ignorable="d"
        Title="MainWindow" Height="165" Width="300">
    <Grid RenderTransformOrigin="0.498,0.459">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <Button Grid.ColumnSpan="2" Content="Start" 
                HorizontalAlignment="Left" VerticalAlignment="Top" 
                Width="118" Margin="10,10,0,0" Height="50" 
                Click="Button_Click"/>
        <Button Grid.ColumnSpan="2" Content="Stop" 
                HorizontalAlignment="Left" VerticalAlignment="Bottom" 
                Width="118" Margin="10,0,0,10" Height="50" Click="Button_Click_1"/>
        
        <TextBox Grid.ColumnSpan="2" 
                 HorizontalAlignment="Right" VerticalAlignment="Top"
                 Width="118" Margin="0,10,10,0" Height="110"/>
    </Grid>
</Window>
